<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_Comment_UserAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_Comment_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_Comment_UserAvatar"
        app:layout_constraintStart_toEndOf="@+id/img_Comment_UserAvatar"
        app:layout_constraintTop_toTopOf="@+id/img_Comment_UserAvatar" />

    <TextView
        android:id="@+id/lbl_Comment_Content"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start|top"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/img_Comment_UserAvatar"
        app:layout_constraintTop_toBottomOf="@+id/img_Comment_UserAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>