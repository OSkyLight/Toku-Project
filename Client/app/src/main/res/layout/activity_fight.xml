<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FightActivity">

    <ImageView
        android:id="@+id/btn_FightBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Figh_UserHero"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_FightBack"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_Figh_ClickedUserHero"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_FightBack"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_Fight_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_Figh_UserHero"
        app:layout_constraintStart_toStartOf="@+id/img_Figh_UserHero"
        app:layout_constraintTop_toBottomOf="@+id/img_Figh_UserHero" />

    <TextView
        android:id="@+id/lbl_Fight_ClickedUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_Figh_ClickedUserHero"
        app:layout_constraintStart_toStartOf="@+id/img_Figh_ClickedUserHero"
        app:layout_constraintTop_toBottomOf="@+id/img_Figh_ClickedUserHero" />

    <TextView
        android:id="@+id/lbl_Fight_UserAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/sword_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_Username"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_Username"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_Username" />

    <TextView
        android:id="@+id/lbl_Fight_ClickedUserAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/sword_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_ClickedUserName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_ClickedUserName"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_ClickedUserName" />

    <TextView
        android:id="@+id/lbl_Fight_UserDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/shield_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_UserAttack"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_UserAttack"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_UserAttack" />

    <TextView
        android:id="@+id/lbl_Fight_ClickedUserDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/shield_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_ClickedUserAttack"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_ClickedUserAttack"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_ClickedUserAttack" />

    <TextView
        android:id="@+id/lbl_Fight_UserHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/health_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_UserDefense"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_UserDefense"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_UserDefense" />

    <TextView
        android:id="@+id/lbl_Fight_ClickedUserHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/health_icon"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_ClickedUserDefense"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_ClickedUserDefense"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_ClickedUserDefense" />

    <TextView
        android:id="@+id/lbl_Fight_UserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_UserHealth"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_UserHealth"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_UserHealth" />

    <TextView
        android:id="@+id/lbl_Fight_ClickedUserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Fight_ClickedUserHealth"
        app:layout_constraintStart_toStartOf="@+id/lbl_Fight_ClickedUserHealth"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_ClickedUserHealth" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_Figh_UserHero"
        app:layout_constraintEnd_toStartOf="@+id/img_Figh_ClickedUserHero"
        app:layout_constraintStart_toEndOf="@+id/img_Figh_UserHero"
        app:layout_constraintTop_toTopOf="@+id/img_Figh_UserHero"
        app:srcCompat="@drawable/versus_128" />

    <Button
        android:id="@+id/btn_FightAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/fight_icon_32"
        android:text="Fight"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ProgressBar
        android:id="@+id/loadingBar_Fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_FightAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listVIew_FightRecord"
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_UserLevel" />

    <TextView
        android:id="@+id/lbl_Fight_Reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/black"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Fight_UserLevel" />
</androidx.constraintlayout.widget.ConstraintLayout>