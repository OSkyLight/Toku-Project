<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgView_FightHis_UserHeroPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_FightHis_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgView_FightHis_UserHeroPic"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/imgView_FightHis_UserHeroPic"
        app:layout_constraintTop_toBottomOf="@+id/imgView_FightHis_UserHeroPic" />

    <TextView
        android:id="@+id/lbl_FightHis_FightUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgView_FightHis_FightUserHeroPic"
        app:layout_constraintStart_toStartOf="@+id/imgView_FightHis_FightUserHeroPic"
        app:layout_constraintTop_toBottomOf="@+id/imgView_FightHis_FightUserHeroPic" />

    <ImageView
        android:id="@+id/imgView_FightHis_FightUserHeroPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_FightHis_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgView_FightHis_UserHeroPic" />

    <TextView
        android:id="@+id/lbl_FightHis_Reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/coins"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_FightHis_UserName"
        app:layout_constraintEnd_toStartOf="@+id/lbl_FightHis_FightUserName"
        app:layout_constraintStart_toEndOf="@+id/lbl_FightHis_UserName" />
</androidx.constraintlayout.widget.ConstraintLayout>