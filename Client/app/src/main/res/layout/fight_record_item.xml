<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_FightRecord_Turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_green_dark"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_FightRecord_User"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/lbl_FightRecord_Turn"
        app:layout_constraintTop_toBottomOf="@+id/lbl_FightRecord_Turn"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_FightRecord_ClickedUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_FightRecord_Turn"
        app:layout_constraintTop_toBottomOf="@+id/lbl_FightRecord_Turn"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_FightRecord_Damge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14dp"
        android:textStyle="bold"
        android:contentDescription="Damage inflicted in the fight."
        app:layout_constraintEnd_toStartOf="@+id/img_FightRecord_ClickedUser"
        app:layout_constraintStart_toEndOf="@+id/img_FightRecord_User"
        app:layout_constraintTop_toTopOf="@+id/img_FightRecord_User" />

    <TextView
        android:id="@+id/lbl_FightRecord_UserHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_FightRecord_User"
        app:layout_constraintStart_toStartOf="@+id/img_FightRecord_User"
        app:layout_constraintTop_toBottomOf="@+id/img_FightRecord_User" />

    <TextView
        android:id="@+id/lbl_FightRecord_ClickedUserHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_FightRecord_ClickedUser"
        app:layout_constraintStart_toStartOf="@+id/img_FightRecord_ClickedUser"
        app:layout_constraintTop_toBottomOf="@+id/img_FightRecord_ClickedUser" />

    <ImageView
        android:id="@+id/img_AttackDirection"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/img_FightRecord_ClickedUser"
        app:layout_constraintStart_toEndOf="@+id/img_FightRecord_User"
        app:layout_constraintTop_toBottomOf="@+id/lbl_FightRecord_Damge"
        app:srcCompat="@drawable/attack_direction" />

</androidx.constraintlayout.widget.ConstraintLayout>
