<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgView_HeroPic"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/home_icon" />

    <TextView
        android:id="@+id/lbl_HeroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:text="Hero Name"
        android:textAlignment="gravity"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_HeroFullPic"
        app:layout_constraintStart_toEndOf="@+id/imgView_HeroPic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_HeroDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Hero Description"
        app:layout_constraintEnd_toEndOf="@+id/lbl_HeroName"
        app:layout_constraintStart_toStartOf="@+id/lbl_HeroName"
        app:layout_constraintTop_toBottomOf="@+id/lbl_HeroName" />

    <ImageView
        android:id="@+id/img_HeroFullPic"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>