<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileFragment">

    <ImageView
        android:id="@+id/img_ProfileUserAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/loadingBar_Store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_Username"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/user_icon"
        android:gravity="center_vertical"
        android:text="TextView"

        app:layout_constraintEnd_toEndOf="@+id/img_ProfileUserAvatar"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/img_ProfileUserAvatar"
        app:layout_constraintTop_toBottomOf="@+id/img_ProfileUserAvatar" />

    <TextView
        android:id="@+id/lbl_Email"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/email_icon"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Username"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/lbl_Username"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Username" />

    <TextView
        android:id="@+id/lbl_MobilePhone"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/phone_icon"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/lbl_Email"
        app:layout_constraintStart_toStartOf="@+id/lbl_Email"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Email" />

    <Button
        android:id="@+id/btn_GoToHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Hero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_coins" />

    <TextView
        android:id="@+id/lbl_coins"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/coins"
        app:layout_constraintEnd_toEndOf="@+id/lbl_MobilePhone"
        app:layout_constraintStart_toStartOf="@+id/lbl_MobilePhone"
        app:layout_constraintTop_toBottomOf="@+id/lbl_MobilePhone" />

    <Button
        android:id="@+id/btn_LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="22dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>