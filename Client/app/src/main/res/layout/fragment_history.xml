<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HistoryFragment">

    <ImageView
        android:id="@+id/img_History_UserAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lbl_History_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_History_UserAvatar"
        app:layout_constraintStart_toStartOf="@+id/img_History_UserAvatar"
        app:layout_constraintTop_toBottomOf="@+id/img_History_UserAvatar" />

    <Button
        android:id="@+id/btn_OrderHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Order History"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/icon_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_History_Username" />

    <Button
        android:id="@+id/btn_FightHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Fight History"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/fight_icon_32"
        app:layout_constraintEnd_toEndOf="@+id/btn_OrderHistory"
        app:layout_constraintStart_toStartOf="@+id/btn_OrderHistory"
        app:layout_constraintTop_toBottomOf="@+id/btn_OrderHistory" />
</androidx.constraintlayout.widget.ConstraintLayout>
